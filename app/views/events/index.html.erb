<h1>My House</h1>

<h3>"...but as for me and my house, we will serve the LORD." Joshua 24:15</h3>

<h2>Events</h2>

    <% @events.each do |event| %>
    <div class = "container">
      <div class = "row">
        <div class = "col-md-6 well">
            <p> <%= event.title %> </p>
            <p> <%= event.description %> </p>
            <p> <%= event.location %> </p>
            <p> <%= event.contact %> </p>
            <%= link_to "More Info", event_path(event) %>
            </div>
          </div>
        </div>
    <% end %>

